@model INFLUIR.Models.Produtor

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Produtor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" class="form-produtor">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CPF" class="control-label"></label>
                <input id="cpf" autocomplete="off"  placeholder="000.000.000-00" asp-for="CPF" class="form-control" />
                <span asp-validation-for="CPF" class="text-danger"></span>
                <span id="cpf-invalid" class="text-danger" style="display:none">CPF Invalido</span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {    
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    @{await Html.RenderPartialAsync("~/Views/Shared/Produtors/_ValidationCreate.cshtml");}
}
