@model INFLUIR.Models.Lote

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Lote</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Codigo" class="control-label"></label>
                <input asp-for="Codigo" class="form-control" />
                <span asp-validation-for="Codigo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PerimetroId" class="control-label"></label>
                @Html.DropDownListFor(x => x.PerimetroId, new SelectList(ViewBag.Perimetros, "Id", "Nome"), new {@class = "form-control"})
                <span asp-validation-for="PerimetroId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProdutorId" class="control-label"></label>
                @Html.DropDownListFor(x => x.ProdutorId, new SelectList(ViewBag.Produtores, "Id", "Nome"), new {@class = "form-control"})
                <span asp-validation-for="ProdutorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
